{
  "name": "aegisphp/monorepo",
  "description": "AegisPHP monorepo (development tooling). Packages live under /packages and are installable independently.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.60"
  },
  "autoload": {
    "psr-4": {
      "Aegis\\Core\\": "packages/core/src/",
      "Aegis\\Bulwark\\": "packages/bulwark/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aegis\\Core\\Tests\\": "packages/core/tests/",
      "Aegis\\Bulwark\\Tests\\": "packages/bulwark/tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "path",
      "url": "packages/*",
      "options": {
        "symlink": true
      }
    }
  ],
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "php-http/discovery": false
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse",
    "cs": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix"
  }
}
